<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.o3sa.mobipugapp.uicomponents.CircularImageView
                        android:id="@+id/edt_vreg_profile_img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/menu_profile"/>

                    <ImageView
                        android:id="@+id/edt_vreg_camerapic_img"
                        android:layout_width="28dp"
                        android:layout_height="25dp"
                        android:layout_gravity="bottom|right"
                        android:layout_marginLeft="15dp"
                        android:src="@drawable/camera"/>

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/edt_vreg_idprf_tx"
                    layout="@layout/customtextview"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/shadowwithoutradius">

                    <LinearLayout
                        android:id="@+id/adhaar_card_lay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.87"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/camera"
                            android:tint="@color/cam_txt_clt"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/dark_grey_clr"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13">

                        <include
                            android:id="@+id/edt_vreg_idprf_edtx"
                            layout="@layout/customedittextview"/>

                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/adhaar_card_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>

                <include
                    android:id="@+id/edt_vreg_pancrd_tx"
                    layout="@layout/customtextview"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:background="@drawable/shadowwithoutradius">

                    <LinearLayout
                        android:id="@+id/pan_card_lay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.87"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/camera"
                            android:tint="@color/cam_txt_clt"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/dark_grey_clr"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13">

                        <include
                            android:id="@+id/edt_vreg_pancrd_edtx"
                            layout="@layout/customedittextview" />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/pan_card_img"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"/>

                <include
                    android:id="@+id/edt_vreg_bnkdetls_tx"
                    layout="@layout/customtextview"/>

                <include
                    android:id="@+id/edt_vreg_fulnme_tx"
                    layout="@layout/customtextview"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/shadowwithoutradius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.87"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/m_myprofile"
                            android:tint="@color/cam_txt_clt"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/dark_grey_clr"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13">

                        <include
                            android:id="@+id/edt_vreg_fulnme_edtx"
                            layout="@layout/customedittextview" />

                    </LinearLayout>
                </LinearLayout>

                <include
                    android:id="@+id/edt_vreg_acntnmbr_tx"
                    layout="@layout/customtextview"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/shadowwithoutradius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.87"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/m_myprofile"
                            android:tint="@color/cam_txt_clt"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/dark_grey_clr"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13">

                        <include
                            android:id="@+id/edt_vreg_acntnmbr_edtx"
                            layout="@layout/customedittextview" />

                    </LinearLayout>
                </LinearLayout>

                <include
                    android:id="@+id/edt_vreg_ifsc_tx"
                    layout="@layout/customtextview"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/shadowwithoutradius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.87"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/m_myprofile"
                            android:tint="@color/cam_txt_clt"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:background="@color/dark_grey_clr"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13">

                        <include
                            android:id="@+id/edt_vreg_ifsc_edtx"
                            layout="@layout/customedittextview" />
                    </LinearLayout>
                </LinearLayout>


                <include
                    android:id="@+id/edt_vreg_pakgetype_tx"
                    layout="@layout/customtextview"/>

                <LinearLayout
                    android:id="@+id/vndr_pckg_type_lay"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:background="@drawable/shadowwithoutradius">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.87"
                        android:gravity="center"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/m_myprofile"
                            android:tint="@color/cam_txt_clt"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.1dp"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:background="@color/dark_grey_clr"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.5">

                        <include
                            android:id="@+id/edt_vreg_pakgetype_edtx"
                            layout="@layout/customedittextview" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="0.87"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/vreg_pakgetype_imgg"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/dropdown_icon"/>

                    </LinearLayout>


                </LinearLayout>

                <include
                    android:id="@+id/edt_vreg_cntnue_btn"
                    layout="@layout/custombutton"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>