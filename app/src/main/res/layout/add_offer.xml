                        android:layout_height="wrap_content"
                        android:id="@+id/adofr_dscntype_edtx"
                        android:background="@null"
                        android:focusable="false"
                        android:textSize="14dp"
                        android:drawableRight="@drawable/dropdown_iconnew"
                        android:paddingRight="4dp"
                        android:singleLine="true"
                        android:hint="@string/dscunt_type"
                        android:textColorHint="@color/dark_grey_clr"
                        android:textColor="@color/black"
                        android:focusableInTouchMode="false"
                        android:editable="false"

                        />




            </LinearLayout>

            <com.o3sa.mobipugapp.customfonts.CustomEditTextGibson
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/adofr_amount_edtx"
                android:background="@drawable/shadoweffect"
                android:textSize="14dp"
                android:singleLine="true"
                android:hint="@string/amount"
                android:inputType="numberDecimal"
                android:textColorHint="@color/dark_grey_clr"
                android:textColor="@color/black"

                />


