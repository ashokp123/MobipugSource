            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/adofr_radiobutn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/adofr_publc_tx"
                layout="@layout/customtextview"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/adofr_radiobutnone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <include
                    android:id="@+id/adofr_private_tx"
                    layout="@layout/customtextview"/>

            </LinearLayout>
        </LinearLayout>


            <LinearLayout
                android:id="@+id/adofr_slctctgry_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/shadoweffect"
                android:orientation="horizontal">



                <com.o3sa.mobipugapp.customfonts.CustomEditTextGibson
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:id="@+id/adofr_slctctgry_edtx"
                    android:background="@null"
                    android:focusable="false"

                    android:textSize="14dp"
                    android:singleLine="true"
                    android:drawableRight="@drawable/dropdown_iconnew"
                    android:paddingRight="4dp"
                    android:hint="@string/sel_category"
                    android:textColorHint="@color/dark_grey_clr"
                    android:textColor="@color/black"
                    android:focusableInTouchMode="false"
                    android:editable="false"

                    />



            </LinearLayout>

            <LinearLayout
