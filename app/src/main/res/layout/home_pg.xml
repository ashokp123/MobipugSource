<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/map_lay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/shadowwithoutradius">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:layout_gravity="center">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:layout_weight="0.22"
                                            android:layout_gravity="center"
                                            android:gravity="center">

                                                <ImageView
                                                    android:id="@+id/cstmr_hmpg_seacrh_img"
                                                    android:layout_width="18dp"
                                                    android:layout_height="18dp"
                                                    android:src="@drawable/search_icon"
                                                    android:layout_marginLeft="10dp"/>

                                            <View
                                                android:layout_width="0.5dp"
                                                android:layout_height="50dp"
                                                android:alpha="0.5"
                                                android:background="@color/ash_clr"
                                                android:layout_gravity="center"
                                                android:layout_marginLeft="10dp"></View>

                                            <EditText
                                                android:id="@+id/cstmr_hmpg_seacrh_edt"
                                                android:layout_width="238dp"
                                                android:layout_height="match_parent"
                                                android:background="@null"
                                                android:hint="Search Offers near by you"
                                                android:paddingBottom="10dp"
                                                android:paddingLeft="7dp"
                                                android:paddingRight="7dp"
                                                android:paddingTop="10dp"
                                                android:textColor="@color/black"
                                                android:textColorHint="@color/dark_grey_clr"
                                                android:textSize="15dp"
                                                android:visibility="visible" />

                                        </LinearLayout>

                                        <View
                                            android:layout_width="0.5dp"
                                            android:layout_height="50dp"
                                            android:alpha="0.5"
                                            android:layout_gravity="center"
                                            android:background="@color/ash_clr"></View>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:layout_weight="0.78"
                                            android:layout_gravity="center"
                                            android:gravity="center">

                                            <LinearLayout
                                                android:id="@+id/cstmr_hmpg_fltr_lay"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_weight="0.5">

                                                <ImageView
                                                    android:id="@+id/cstmr_hmpg_fltr_img"
                                                    android:layout_width="25dp"
                                                    android:layout_height="25dp"
                                                    android:src="@drawable/cart_icon"/>

                                            </LinearLayout>

                                            <View
                                                android:layout_width="0.2dp"
                                                android:layout_height="50dp"
                                                android:layout_gravity="center"
                                                android:alpha="0.5"
                                                android:background="@color/ash_clr"></View>

                                            <LinearLayout
                                                android:id="@+id/cstmr_hmpg_list_lay"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:layout_gravity="center"
                                                android:gravity="center"
                                                android:layout_weight="0.5">

                                                <ImageView
                                                    android:id="@+id/cstmr_hmpg_list_img"
                                                    android:layout_width="22dp"
                                                    android:layout_height="22dp"
                                                    android:src="@drawable/listviewicon"
                                                    android:tint="@color/search_clr"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>