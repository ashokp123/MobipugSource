<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <include
            android:id="@+id/forgotpw_txtt"
            layout="@layout/customtextview"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/forgotpw_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.o3sa.mobipugapp.customfonts.CustomEditText
                android:id="@+id/forgotpw_edtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:paddingTop="10dp"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/email"
                android:textColor="@color/black"
                android:textColorHint="@color/ash_clr"/>

           <!-- <include
                android:id="@+id/forgotpw_edtxt"
                layout="@layout/custommultilineedittext"/>-->

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:background="@color/start_date_clr"/>

        <include
            android:id="@+id/submit_btnn"
            layout="@layout/custombutton"/>
    </LinearLayout>

</LinearLayout>